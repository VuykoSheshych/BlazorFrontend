@page "/test"

<MudGrid Spacing="0">
	@for (int row = 0; row <= 7; row++)
	{
		var r = row;

		<MudItem xs="12">
			<MudGrid Spacing="0">
				@for (int col = 0; col <= 7; col++)
				{
					var c = col;
					var squareColor = (r + c) % 2 == 0 ? Colors.Yellow.Accent1 : Colors.Gray.Darken1;

					<MudPaper Style="@($"background:{squareColor}; height:60px; width:60px")">
						<MudButton Class="d-flex align-center justify-center mud-width-full py-8" Variant="Variant.Filled">
							<MudText Typo="Typo.h3">@r</MudText>
						</MudButton>
					</MudPaper>
				}
			</MudGrid>
		</MudItem>
	}
</MudGrid>