@page "/games"
@inject GameService GameService

<h3>Список шахових партій</h3>

@if (games == null)
{
	<p>Завантаження...</p>
}
else if (games.Count == 0)
{
	<p>Немає партій.</p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Білий</th>
				<th>Чорний</th>
				<th>Результат</th>
				<th>Дата</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var game in games)
			{
				<tr>
					<td>@game.Id</td>
					<td>@game.PlayerWhite</td>
					<td>@game.PlayerBlack</td>
					<td>@game.Result</td>
					<td>@game.Date.ToString("yyyy-MM-dd HH:mm")</td>
				</tr>
			}
		</tbody>
	</table>
}

@code {
	private List<GameRecord>? games;

	protected override async Task OnInitializedAsync()
	{
		games = await GameService.GetGamesAsync();
	}
}